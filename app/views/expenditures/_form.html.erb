<div class="col-md-8">
	<div class="well">
		<%= form_for @expenditure, html: { role: "form" } do |f|%>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
			<div class="form-group">
				<%= f.label :amount %>
				$ <%= f.number_field :amount, min: 0, step: 0.05 %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description %>
			</div>
			<%= f.submit(@expenditure.new_record? ? "Add expenditure" : "Update expenditure", class: "btn btn-primary") %>
		<% end %>
	</div>
</div>